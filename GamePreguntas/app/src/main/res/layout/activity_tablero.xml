<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmenu"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvTurno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TURNO : "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:fontFamily="@font/fugaz_one"></TextView>

    <LinearLayout
        android:id="@+id/llyNombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/tvTurno"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombre1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textColor="@color/black"
            app:fontFamily="@font/allan_bold"
            android:textSize="16sp"></TextView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombre2"
            android:layout_marginLeft="120dp"
            android:text="-"
            android:textSize="18sp"
            app:fontFamily="@font/allan_bold"
            android:textColor="@color/black"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/llyNombres"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPuntaje1"
            android:layout_marginLeft="10dp"
            android:text="Points:"
            android:textSize="18sp"
            app:fontFamily="@font/allan_bold"
            android:textColor="@color/black"></TextView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPuntaje2"
            android:layout_marginLeft="120dp"
            android:text="Points:"
            android:textSize="18sp"
            app:fontFamily="@font/allan_bold"
            android:textColor="@color/black"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyBtnsFila1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/llyPoints"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight1"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="1"></Button>

        <Button
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/bluelight2"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:layout_marginLeft="10dp"
            android:text="2"></Button>

        <Button
            android:id="@+id/btn3"
            android:layout_width="70dp"

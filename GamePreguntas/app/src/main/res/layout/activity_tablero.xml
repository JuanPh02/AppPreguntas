    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyPreguntas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llyBtnsFila4"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            app:fontFamily="@font/allan_bold"
            android:text="PREGUNTA"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:scrollbars="vertical"
            android:layout_marginTop="5dp"
            android:id="@+id/etPreguntas"
            android:clickable="false"
            android:focusable="false"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            app:fontFamily="@font/allan_bold"
            android:text="RESPUESTAS"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llyPreguntas"
        android:id="@+id/llyRespuestas"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/rgRespuestas"
            android:layout_width="match_parent"
            android:textSize="14sp"
            app:fontFamily="@font/fugaz_one"
            android:layout_height="wrap_content">
 m
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:checked="false"></RadioButton>

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/rb2"></RadioButton>

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/rb3"></RadioButton>

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/rb4"></RadioButton>
        </RadioGroup>

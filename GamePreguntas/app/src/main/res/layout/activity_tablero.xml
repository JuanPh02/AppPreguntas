            android:fontFamily="@font/aldrich"
            android:layout_marginLeft="10dp"
            android:text="3"></Button>

        <Button
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight2"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="4"></Button>

        <Button
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/bluelight1"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:layout_marginLeft="10dp"
            android:text="5"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyBtnsFila2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/llyBtnsFila1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight2"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="6"></Button>

        <Button
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight1"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="7"></Button>

        <Button
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight2"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="8"></Button>

        <Button
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight1"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="9"></Button>

        <Button
            android:id="@+id/btn10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight2"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="10"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyBtnsFila3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/llyBtnsFila2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight1"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="11"></Button>

        <Button
            android:id="@+id/btn12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight2"
            android:textSize="20sp"
            android:fontFamily="@font/aldrich"
            android:text="12"></Button>

        <Button
            android:id="@+id/btn13"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bluelight1"
